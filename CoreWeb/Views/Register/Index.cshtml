@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@model CoreWeb.ViewModels.Register.RegisterViewModel


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post" id="form">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız-Soyadınız</label>

                            <input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail Adresi</label>
                            <input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            <input type="password" class="form-control" id="password1" name="WriterPassword" placeholder="" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifre Tekrar</label>
                            <input type="password" class="form-control" id="password2" name="ConfirmPassword" placeholder="" required="">
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şehir </label>
                            <select class="form-group col-md-6">
                                <option>--Şehir Seç--</option>
                                @foreach(var city in Model.Cities)
                                {
                                    <option>@city.CityName</option>
                                }
                                

                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">İlçe </label>
                            <select class="form-group col-md-6">
                                <option>--Şehir Seç--</option>
                            </select>
                        </div>



                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Görsel Dosya Yolu</label>
                            <input type="text" class="form-control" id="" name="WriterImage" placeholder="" required="">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary submit mb-4" id="submitBtn" disabled>Kayıt Ol</button>
                    <p>
                        <a id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
    <br />

</section>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/js/site.js"></script>


